import("//build/components.gni")
import("//build/test.gni")

executable("bin") {
  testonly = true
  output_name = "cpp_wire_sync_client_suite"
  sources = [
    "runner.cc",
    "runner.h",
    "tests.cc",
  ]
  deps = [
    "//sdk/lib/sys/component/cpp",
    "//src/lib/fxl/test:gtest_main",
    "//src/lib/testing/loop_fixture",
    "//src/lib/testing/predicates",
    "//src/tests/fidl/channel_util",
    "//src/tests/fidl/client_suite/fidl:fidl.clientsuite_llcpp",
    "//third_party/googletest:gtest",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/service:service-llcpp",
  ]
}

fuchsia_component("cpp-wire-sync-client-suite") {
  testonly = true
  component_name = "cpp_wire_sync_client_suite"
  manifest = "meta/cpp_wire_sync_client_suite.cml"
  deps = [ ":bin" ]
}

fuchsia_test_package("fidl-client-suite-cpp-wire-sync-test") {
  test_components = [ ":cpp-wire-sync-client-suite" ]
  deps = [ "//src/tests/fidl/client_suite/harness" ]
}

group("cpp_wire_sync") {
  testonly = true
  deps = [ ":fidl-client-suite-cpp-wire-sync-test" ]
}
