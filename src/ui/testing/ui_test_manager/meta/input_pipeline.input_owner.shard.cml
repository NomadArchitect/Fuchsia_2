{
    include: [ "//src/ui/testing/ui_test_manager/meta/text_manager.shard.cml" ],
    children: [
        {
            name: "input-pipeline",
            url: "#meta/input-pipeline.cm",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.ui.pointerinjector.Registry",
                "fuchsia.ui.scenic.Scenic",
            ],
            from: "#scenic",
            to: [ "#input-pipeline" ],
        },
        {
            // Input pipeline will only ever be used with root presenter.
            protocol: [ "fuchsia.ui.pointerinjector.configuration.Setup" ],
            from: "#root-presenter",
            to: [ "#input-pipeline" ],
        },
        {
            protocol: [ "fuchsia.ui.keyboard.focus.Controller" ],
            from: "#text-manager",
            to: [ "#root-presenter" ],
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.input.injection.InputDeviceRegistry",
                "fuchsia.ui.policy.DeviceListenerRegistry",
            ],
            from: "#input-pipeline",
        },
    ],
}
