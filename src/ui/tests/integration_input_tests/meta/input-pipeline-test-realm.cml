{
    include: [ "//src/ui/tests/integration_input_tests/meta/scenic-test-realm.cml" ],
    children: [
        {
            name: "input-pipeline",
            url: "#meta/wrapped-input-pipeline.cm",
        },
        {
            name: "root_presenter",
            url: "#meta/root_presenter.cm",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.ui.scenic.Scenic" ],
            from: "#scenic",
            to: [ "#root_presenter" ],
        },
        {
            protocol: [
                "fuchsia.ui.pointerinjector.Registry",
                "fuchsia.ui.scenic.Scenic",
            ],
            from: "#scenic",
            to: [ "#input-pipeline" ],
        },
        {
            protocol: [ "fuchsia.ui.pointerinjector.configuration.Setup" ],
            from: "#root_presenter",
            to: [ "#input-pipeline" ],
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.input.injection.InputDeviceRegistry",
                "fuchsia.ui.policy.DeviceListenerRegistry",
            ],
            from: "#input-pipeline",
        },
        {
            protocol: [ "fuchsia.ui.policy.Presenter" ],
            from: "#root_presenter",
        },
    ],
}
