import("//build/components.gni")
import("//build/rust/rustc_library.gni")

group("shared") {
  testonly = true
  deps = [ ":lib" ]
}

group("tests") {
  testonly = true
  deps = [ ":lib-test-pkg" ]
}

rustc_library("lib") {
  name = "clipboard_shared"
  edition = "2021"
  with_unit_tests = true
  sources = [
    "src/lib.rs",
    "src/view_refs.rs",
  ]
  deps = [
    "//sdk/fidl/fuchsia.ui.views:fuchsia.ui.views-rustc",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/zircon/rust:fuchsia-zircon",
  ]
  test_deps = [
    "//src/lib/ui/fidl_fuchsia_ui_views_ext:lib",
    "//src/lib/ui/fuchsia-scenic:fuchsia-scenic",
  ]
}

fuchsia_unittest_package("lib-test-pkg") {
  package_name = "clipboard_shared_lib_test"
  deps = [ ":lib_test" ]
}
