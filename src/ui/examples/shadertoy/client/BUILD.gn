import("//src/sys/build/components.gni")

executable("bin") {
  output_name = "shadertoy_client"

  sources = [
    "glsl_strings.cc",
    "glsl_strings.h",
    "main.cc",
    "view.cc",
    "view.h",
  ]

  deps = [
    "//garnet/public/lib/fostr/fidl/fuchsia.ui.input",
    "//sdk/fidl/fuchsia.math",
    "//sdk/fidl/fuchsia.ui.gfx",
    "//sdk/fidl/fuchsia.ui.input",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/ui/scenic/cpp",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//src/lib/ui/base_view",
    "//src/ui/examples/shadertoy/service",
    "//src/ui/examples/shadertoy/service/services",
    "//src/ui/lib/glm_workaround",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/trace-provider:trace-provider-with-fdio",
  ]

  include_dirs = [ "//lib" ]
}

fuchsia_package_with_single_component("client") {
  manifest = "meta/shadertoy_client.cmx"
  deps = [ ":bin" ]
}
