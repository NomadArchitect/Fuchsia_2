import("//build/bind/bind.gni")
import("//build/config/fuchsia/rules.gni")
import("//src/sys/build/components.gni")

bind_rules("rtl88xx_bind") {
  rules = "rtl88xx.bind"
  output = "rtl88xx-bind.h"
  tests = "tests.json"
  deps = [
    "//src/devices/bind/fuchsia.pci",
    "//src/devices/bind/fuchsia.usb",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":rtl88xx_bind_test" ]
}

driver_module("rtl88xx_driver") {
  output_name = "rtl88xx"

  sources = [
    "bus.cc",
    "bus.h",
    "bus_util.h",
    "device.cc",
    "device.h",
    "register.h",
    "rtl8821c_device.cc",
    "rtl8821c_device.h",
    "rtl88xx_registers.h",
    "usb_bus.cc",
    "usb_bus.h",
    "wlan_mac.cc",
    "wlan_mac.h",
    "wlan_phy.cc",
    "wlan_phy.h",
  ]

  deps = [
    ":rtl88xx_bind",
    "//garnet/lib/wlan/protocol",
    "//sdk/banjo/fuchsia.hardware.usb",
    "//sdk/banjo/fuchsia.hardware.wlanphyimpl",
    "//src/connectivity/wlan/lib/common/cpp:common",
    "//src/devices/lib/driver",
    "//src/devices/usb/lib/usb",
    "//src/lib/ddk",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/system/public",
  ]
}

fuchsia_system_package("rtl88xx") {
  # Fuchsia does not yet support loading drivers out of packages.

  deps = [ ":rtl88xx_driver" ]

  # This package is reachable from //garnet/packages/prod:all
  allowed_in_extra_deps = true
}
