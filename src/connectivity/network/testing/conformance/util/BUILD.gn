import("//build/go/go_library.gni")
import("//build/testing/host_test_data.gni")

if (is_host) {
  go_library("util") {
    sources = [ "util.go" ]
    deps = [ "//tools/lib/osmisc" ]
    non_go_deps = [
      ":dut_authorized_keys",
      ":dut_ssh_key",
    ]
    testonly = true
  }

  host_test_data("dut_ssh_key") {
    sources = [ "//.ssh/pkey" ]

    # TODO(https://fxbug.dev/112513): rm in_tree path component once
    # soft-transition has occurred.
    outputs = [ "${root_out_dir}/ssh_keys/in_tree/dut_ssh_key" ]
  }

  host_test_data("dut_authorized_keys") {
    sources = [ "//.ssh/authorized_keys" ]

    # TODO(https://fxbug.dev/112513): rm in_tree path component once
    # soft-transition has occurred.
    outputs = [ "${root_out_dir}/ssh_keys/in_tree/dut_authorized_keys" ]
  }
}
