{
    program: {
        runner: "netemul_test_runner",
    },
    capabilities: [
        { protocol: "fuchsia.test.Suite" },
    ],
    use: [
        {
            directory: "hub",
            from: "framework",
            rights: [ "r*" ],
            path: "/hub",
        },
        { protocol: "fuchsia.sys2.EventSource" },
        {
            event: [ "stopped" ],
            from: "framework",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.test.Suite",
            from: "self",
        },
    ],
}
