import("//build/dist/resource.gni")

# TODO(https://fxbug.dev/92247): read the configurations directly from the
# `program` section of the component's manifest rather than from a packaged
# config file, once the CML schema supports it.

resource("empty") {
  sources = [ "empty.json" ]
  outputs = [ "empty.json" ]
}

resource("invalid") {
  sources = [ "invalid.json" ]
  outputs = [ "invalid.json" ]
}

group("config") {
  deps = [
    ":empty",
    ":invalid",
  ]
}
