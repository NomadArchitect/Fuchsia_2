import("//build/components.gni")
import("//build/fidl/fidl.gni")
import("//build/rust/rustc_binary.gni")
import("//build/rust/rustc_library.gni")
import("//build/rust/rustc_test.gni")

rustc_binary("bin") {
  testonly = true
  with_unit_tests = true
  name = "netemul_sandbox_v2"
  edition = "2018"
  deps = [
    "//src/connectivity/network/testing/netemul-v2/fidl:fuchsia.netemul-rustc",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-component",
    "//src/lib/fuchsia-component-test",
    "//src/lib/syslog/rust:syslog",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:log",
    "//third_party/rust_crates:pin-utils",
  ]
  test_deps = [
    "//src/connectivity/network/testing/netemul-v2/test-support:fidl-rustc",
    "//src/lib/diagnostics/data/rust",
    "//src/lib/diagnostics/hierarchy/rust",
    "//src/lib/diagnostics/inspect/rust",
    "//src/lib/diagnostics/reader/rust",
    "//src/lib/zircon/rust:fuchsia-zircon",
  ]
  sources = [ "src/main.rs" ]
  configs -= [ "//build/config/rust:allow_unused_results" ]
}

fuchsia_component("netemul-sandbox-component") {
  testonly = true
  component_name = "netemul-sandbox-v2"
  manifest = "meta/netemul-sandbox-v2.cml"
  deps = [ ":bin" ]
}

group("tests") {
  testonly = true
  deps = [ ":netemul-v2-tests" ]
}

# TODO(https://fxbug.dev/71088): combine the test driver and the test root once
# `use from child` is supported.
fuchsia_component("netemul-sandbox-v2-test-root") {
  testonly = true
  manifest = "meta/netemul-sandbox-v2-test-root.cml"
}

fuchsia_component("netemul-sandbox-v2-test-driver") {
  testonly = true
  manifest = "meta/netemul-sandbox-v2-test-driver.cml"
  deps = [ ":bin_test" ]
}

fuchsia_test_package("netemul-v2-tests") {
  test_components = [ ":netemul-sandbox-v2-test-root" ]
  deps = [
    ":netemul-sandbox-v2-test-driver",
    "//src/connectivity/network/testing/netemul-v2/test-support:counter",
  ]
}
