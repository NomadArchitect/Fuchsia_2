{
    include: [
        "sdk/lib/diagnostics/syslog/client.shard.cml",
        "src/sys/lib/topology_builder/meta/topology_builder.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/netemul_sandbox_v2",
    },
    capabilities: [
        { protocol: "fuchsia.netemul.Sandbox" },
    ],

    // TODO(https://fxbug.dev/72047): rather than exposing the real syslog to
    // the topology, netemul-sandbox-v2 should offer a custom LogSink service to
    // the components under test that decorates the logs with the name of the
    // containing test realm before logging them to syslog.
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [ "#topology_builder_collection" ],
        },
    ],
    expose: [
        {
            protocol: "fuchsia.netemul.Sandbox",
            from: "self",
        },
    ],
}
