group("bin") {
  # Remove this once linux_runner no longer sets "linux_runner_extras_tests" to
  # "true" by default.
  testonly = true

  deps = [
    "guest",
    "guest_manager:packages",
    "host_vsock",
    "linux_runner",
    "vmm",
    "vsh",
  ]
}

group("tests") {
  testonly = true

  deps = [
    "guest:tests",
    "guest_manager:tests",
    "host_vsock:tests",
    "linux_runner:tests",
    "vmm:tests",
  ]
}
