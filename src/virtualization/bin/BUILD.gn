import("//src/virtualization/bin/args.gni")

config("args") {
  defines = []
  if (virtio_vsock_legacy_inprocess) {
    defines += [ "USE_VIRTIO_VSOCK_LEGACY_INPROCESS" ]
  }
  if (rust_virtio_gpu_input_devices) {
    defines += [ "USE_RUST_VIRTIO_GPU_INPUT" ]
  }
}

group("bin") {
  # Remove this once linux_runner no longer sets "linux_runner_extras_tests" to
  # "true" by default.
  testonly = true

  deps = [
    "guest",
    "guest_manager:packages",
    "linux_runner",
    "vmm",
    "vsh",
  ]
}

group("tests") {
  testonly = true

  deps = [
    "guest:tests",
    "guest_manager:tests",
    "linux_runner:tests",
    "vmm:tests",
  ]
}
