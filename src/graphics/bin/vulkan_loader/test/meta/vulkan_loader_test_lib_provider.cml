{
    include: [
        "sdk/lib/diagnostics/syslog/client.shard.cml",
        "sdk/lib/diagnostics/syslog/elf_stdio.shard.cml",
    ],
    program: {
        binary: "bin/pkg-server",
    },
    capabilities: [
        {
            // Use /bin because we know that the pkg-server executable will always be there.
            directory: "bin",
            rights: [ "rx*" ],
            path: "/pkg/bin",
        },
        {
            // /dev directory is always empty. It's used for both dev-gpu and
            // dev-goldfish-pipe just to ensure that the DeviceWatcher starts up
            // successfully.
            directory: "dev",
            rights: [ "rw*" ],
            path: "/dev",
        },
    ],
    expose: [
        {
            directory: "bin",
            from: "self",
            as: "system-lib",
            rights: [ "rx*" ],
        },
        {
            directory: "dev",
            from: "self",
            as: "dev-gpu",
            rights: [ "rw*" ],
        },
        {
            directory: "dev",
            from: "self",
            as: "dev-goldfish-pipe",
            rights: [ "rw*" ],
        },
        {
            directory: "dev",
            from: "self",
            as: "dev-goldfish-control",
            rights: [ "rw*" ],
        },
        {
            directory: "dev",
            from: "self",
            as: "dev-goldfish-address-space",
            rights: [ "rw*" ],
        },
    ],
}
