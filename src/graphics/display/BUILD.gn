import("//build/fuzzing/fuzzer.gni")

group("drivers") {
  testonly = true
  deps = [
    "drivers/aml-canvas",
    "drivers/amlogic-display",
    "drivers/display",
    "drivers/dsi-dw",
    "drivers/dsi-mt",
    "drivers/fake:fake-display",
    "drivers/goldfish-display",
    "drivers/intel-i915",
    "drivers/mt8167s-display",

    # TODO(http://fxbug.dev/77082): Renable disabled drivers.
    #"drivers/ssd1306:ssd1306_driver",
    "drivers/vim-display",
  ]
}

group("tests") {
  testonly = true

  deps = [
    ":display-fuzzers",
    "bin/display-factory-test:display_png_test",
    "drivers:tests",
    "lib:tests",
  ]
}

fuzzers_package("display-fuzzers") {
  cpp_fuzzers = [ "lib/edid:edid-fuzzer" ]
}
