// use this shard to nest test manager in your test topology.
{
    children: [
        {
            name: "test_manager",
            url: "#meta/test_manager_for_tests.cm",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.component.resolution.Resolver",
                "fuchsia.logger.LogSink",
                "fuchsia.process.Launcher",
                "fuchsia.sys2.EventSource",
            ],
            from: "parent",
            to: "#test_manager",
        },
        {
            event_stream: [
                "capability_requested_v2",
                "destroyed_v2",
                "directory_ready_v2",
                "started_v2",
                "stopped_v2",
            ],
            from: "parent",
            to: "#test_manager",
            scope: "#test_manager",
        },
        {
            storage: "tmp",
            from: "parent",
            to: "#test_manager",
        },
        {
            storage: "data",
            from: "parent",
            to: "#test_manager",
        },
    ],
}
