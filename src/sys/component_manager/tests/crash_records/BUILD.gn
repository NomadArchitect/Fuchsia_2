import("//build/components.gni")
import("//build/rust/rustc_binary.gni")
import("//build/rust/rustc_test.gni")

group("tests") {
  testonly = true

  deps = [ ":crash-records-test" ]
}

rustc_binary("bin") {
  name = "panic_on_start"
  edition = "2018"
  source_root = "panic_on_start.rs"
  sources = [ "panic_on_start.rs" ]
}

fuchsia_component("panic_on_start") {
  deps = [ ":bin" ]
  component_name = "panic_on_start"
  manifest = "meta/panic_on_start.cml"
}

rustc_test("crash_records_test_bin") {
  name = "crash_records_test"
  edition = "2018"
  source_root = "crash_records_test.rs"
  deps = [
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-runtime",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//src/sys/component_manager/testing:test_utils_lib",
    "//src/sys/lib/component-events",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
  ]

  sources = [ "crash_records_test.rs" ]
}

fuchsia_unittest_package("crash-records-test") {
  manifest = "meta/crash_records_test.cml"
  deps = [
    ":crash_records_test_bin",
    ":panic_on_start",
  ]
}
