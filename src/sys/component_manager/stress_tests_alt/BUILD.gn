import("//build/fidl/fidl.gni")
import("//build/rust/rustc_binary.gni")
import("//build/rust/rustc_library.gni")
import("//build/rust/rustc_test.gni")
import("//src/sys/build/components.gni")

rustc_test("dynamic_child_stressor_bin") {
  testonly = true
  name = "dynamic_child_stressor"
  edition = "2018"
  deps = [
    "//garnet/lib/rust/files_async",
    "//garnet/lib/rust/io_util",
    "//sdk/fidl/fuchsia.io:fuchsia.io-rustc",
    "//sdk/fidl/fuchsia.sys2:fuchsia.sys2-rustc",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-component",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//src/sys/lib/stress-test",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:argh",
    "//third_party/rust_crates:async-trait",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:log",
    "//third_party/rust_crates:rand",
  ]

  sources = [
    "src/environment.rs",
    "src/hub.rs",
    "src/lib.rs",
    "src/tree_actor.rs",
  ]
}

fuchsia_component("dynamic_child_stressor") {
  testonly = true
  manifest = "meta/dynamic_child_stressor.cml"
  deps = [ ":dynamic_child_stressor_bin" ]
}

fuchsia_component("dynamic_child_component") {
  manifest = "meta/dynamic_child_component.cml"
}

fuchsia_test_package("component-manager-stress-tests-alt") {
  deps = [ ":dynamic_child_component" ]
  test_components = [ ":dynamic_child_stressor" ]
  test_specs = {
    environments = [
      {
        dimensions = {
          device_type = "QEMU"
        }
        tags = [ "stress-tests" ]
      },
    ]
  }
}

group("stress_tests_alt") {
  testonly = true
  deps = [ ":component-manager-stress-tests-alt" ]
}
