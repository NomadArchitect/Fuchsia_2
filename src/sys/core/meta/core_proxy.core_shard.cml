{
    include: [ "syslog/client.shard.cml" ],

    // TODO(fxbug.dev/104628): remove this.
    program: {
        runner: "elf",
        binary: "bin/core_proxy",
    },
    capabilities: [
        {
            directory: "svc_for_sys",
            rights: [ "rw*" ],
            path: "/svc_for_sys",
        },
    ],
    use: [
        {
            directory: "svc_from_sys",
            from: "#appmgr",
            rights: [ "rw*" ],
            path: "/svc_from_sys",
            dependency: "weak_for_migration",
        },
    ],
    offer: [
        {
            directory: "svc_for_sys",
            from: "self",
            to: "#appmgr",
        },
    ],
}
