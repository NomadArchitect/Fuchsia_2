{
    include: [
        "sdk/lib/diagnostics/inspect/client.shard.cml",
        "sdk/lib/diagnostics/syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/stash",
        args: [
            "--secondary_store",
            "--backing_file",
            "/data/stash2.store",
        ],
    },
    capabilities: [
        { protocol: "fuchsia.stash.Store2" },
    ],
    use: [
        {
            storage: "data",
            path: "/data",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.stash.Store2",
            from: "self",
        },
    ],
}
