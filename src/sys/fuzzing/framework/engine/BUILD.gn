source_set("engine") {
  visibility = [ "../*" ]
  testonly = true
  sources = [
    "corpus.cc",
    "corpus.h",
    "dictionary.cc",
    "dictionary.h",
    "module-pool.cc",
    "module-pool.h",
    "module-proxy.cc",
    "module-proxy.h",
  ]
  public_deps = [
    "//src/lib/fxl",
    "//src/sys/fuzzing/common",
    "//src/sys/fuzzing/fidl:fuchsia.fuzzer",
  ]
  deps = [ "//sdk/lib/syslog/cpp" ]
}

source_set("unittests") {
  visibility = [ "../*" ]
  testonly = true
  sources = [
    "corpus-unittest.cc",
    "dictionary-unittest.cc",
    "module-pool-unittest.cc",
    "module-proxy-unittest.cc",
  ]
  deps = [
    ":engine",
    "../target:no_hooks",
    "../testing",
    "//third_party/googletest:gtest",
  ]
}
