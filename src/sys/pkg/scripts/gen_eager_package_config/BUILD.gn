import("//build/components.gni")
import("//build/rust/rustc_binary.gni")
import("//build/rust/rustc_library.gni")
import(
    "//src/sys/pkg/scripts/gen_eager_package_config/eager_package_config.gni")

if (is_host) {
  rustc_library("lib") {
    with_unit_tests = true
    edition = "2021"

    deps = [
      "//src/lib/fuchsia-url",
      "//src/sys/pkg/lib/channel-config",
      "//src/sys/pkg/lib/eager-package-config",
      "//src/sys/pkg/lib/omaha-client",
      "//third_party/rust_crates:anyhow",
      "//third_party/rust_crates:argh",
      "//third_party/rust_crates:http",
      "//third_party/rust_crates:serde",
      "//third_party/rust_crates:serde_json",
      "//third_party/rust_crates:sha2",
    ]

    test_deps = [ ":test_config" ]

    sources = [ "src/lib.rs" ]
  }

  rustc_binary("bin") {
    edition = "2021"
    deps = [
      ":lib",
      "//third_party/rust_crates:anyhow",
      "//third_party/rust_crates:argh",
      "//third_party/rust_crates:serde_json",
    ]
    sources = [ "src/main.rs" ]
  }

  eager_package_config("test_config") {
    key_config = "testdata/key_config.json"
    sources = [ "testdata/eager_package_input.json" ]
  }
}

group("tests") {
  testonly = true
  deps = [ ":lib_test($host_toolchain)" ]
}
