import("//build/test.gni")

group("tests") {
  testonly = true
  deps = []

  if (host_os == "linux") {
    deps += [ ":syscalls_test($host_toolchain)" ]
  }
}

if (host_os == "linux") {
  test("syscalls_test") {
    sources = [
      "orphaned_process_group_test.cc",
      "restart_read_test.cc",
      "trivial_test.cc",
    ]
    deps = [
      "//src/lib/fxl/test:gtest_main",
      "//third_party/googletest:gtest",
    ]
  }
}
