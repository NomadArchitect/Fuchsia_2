import("//build/components.gni")

group("release") {
  if (target_cpu == "x64") {
    deps = [
      "android:stardroid",
      "chromiumos:starmium",
    ]
  }
}

group("test") {
  testonly = true
  if (target_cpu == "x64") {
    deps = [
      "android_test:stardroid_test",
      "chromiumos_test:starmium_test",
    ]
  }
}

# A file that makes sure that the data/tmp directory exists.
resource("data_tmp_placeholder") {
  sources = [ "placeholder" ]
  outputs = [ "data/tmp/.placeholder" ]
}

# A file that makes sure that the data/pkg directory exists.
resource("data_pkg_placeholder") {
  sources = [ "placeholder" ]
  outputs = [ "data/pkg/.placeholder" ]
}
