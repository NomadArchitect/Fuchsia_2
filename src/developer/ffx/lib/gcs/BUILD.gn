import("//build/rust/rustc_library.gni")

rustc_library("lib") {
  name = "gcs"
  edition = "2018"
  with_unit_tests = true

  deps = [ "//third_party/rust_crates:anyhow" ]

  sources = [
    "src/download.rs",
    "src/lib.rs",
  ]
}

group("gcs") {
  deps = [ ":lib" ]
}

group("tests") {
  testonly = true
  deps = [ ":lib_test($host_toolchain)" ]
}
