import("//build/components.gni")
import("//build/rust/rustc_library.gni")

if (is_host) {
  rustc_library("ffx_emulator_engines_vdl_args") {
    name = "ffx_emulator_engines_vdl_args"
    with_unit_tests = true
    edition = "2018"
    sources = [ "src/args.rs" ]
    source_root = "src/args.rs"
    deps = [
      "//src/developer/ffx/config:lib",
      "//src/developer/ffx/core:lib",
      "//third_party/rust_crates:argh",
      "//third_party/rust_crates:serde",
    ]
  }

  # This is a legacy implementation of the device_launcher/VDL engine. It does
  # not fit our new design pattern, so don't copy it if you're trying to add
  # a new engine or features.
  rustc_library("ffx_emulator_engines_vdl") {
    name = "ffx_emulator_engines_vdl"
    with_unit_tests = true
    edition = "2018"
    sources = [
      "src/cipd.rs",
      "src/device.rs",
      "src/graphics.rs",
      "src/images.rs",
      "src/lib.rs",
      "src/target.rs",
      "src/tools.rs",
      "src/types.rs",
      "src/vdl_proto_parser.rs",
    ]
    deps = [
      "//build/sdk/meta:rust",
      "//sdk/fidl/fuchsia.developer.bridge:fuchsia.developer.bridge-rustc",
      "//sdk/fidl/fuchsia.developer.remotecontrol:fuchsia.developer.remotecontrol-rustc",
      "//sdk/fidl/fuchsia.net:fuchsia.net-rustc",
      "//src/connectivity/overnet/lib/hoist",
      "//src/developer/ffx/config:lib",
      "//src/developer/ffx/core:lib",
      "//src/developer/ffx/lib/errors:lib",
      "//src/developer/ffx/lib/fms",
      "//src/developer/ffx/lib/port_picker",
      "//src/developer/ffx/plugins/emulator/common:lib",
      "//src/developer/ffx/plugins/emulator/shutdown:ffx_emulator_shutdown_args",
      "//src/developer/ffx/plugins/emulator/start:ffx_emulator_start_args",
      "//src/lib/diagnostics/selectors",
      "//src/lib/fidl/rust/fidl",
      "//src/lib/fuchsia-async",
      "//src/lib/fuchsia-hyper:fuchsia-hyper",
      "//third_party/rust_crates:ansi_term-v0_11_0",
      "//third_party/rust_crates:anyhow",
      "//third_party/rust_crates:async-trait",
      "//third_party/rust_crates:futures",
      "//third_party/rust_crates:home",
      "//third_party/rust_crates:hyper",
      "//third_party/rust_crates:log",
      "//third_party/rust_crates:mockall",
      "//third_party/rust_crates:regex",
      "//third_party/rust_crates:serde",
      "//third_party/rust_crates:serde_json",
      "//third_party/rust_crates:serial_test",
      "//third_party/rust_crates:shared_child",
      "//third_party/rust_crates:signal-hook",
      "//third_party/rust_crates:tempfile",
      "//third_party/rust_crates:walkdir",
      "//third_party/rust_crates:zip",
    ]
  }
}

group("tests") {
  testonly = true
  deps = [ ":ffx_emulator_engines_vdl_test($host_toolchain)" ]
}
