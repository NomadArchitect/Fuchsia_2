import("//build/host.gni")
import("//build/rust/rustc_binary.gni")

# The standalone binary is a legacy binary to support certain older build
# actions and is deprecated. Do not add additional build dependencies on this
# binary.
rustc_binary("bin") {
  name = "scrutiny"
  with_unit_tests = true
  edition = "2018"
  deps = [
    "//src/security/scrutiny/lib",
    "//third_party/rust_crates:anyhow",
  ]

  non_rust_deps = [ "//src/lib/chunked-compression" ]

  sources = [ "src/main.rs" ]
}

install_host_tools("host") {
  deps = [ ":bin" ]
  outputs = [ "scrutiny" ]
}

group("standalone") {
  deps = [ ":host" ]
}
