library fuchsia.lifecycle.test;

@discoverable
protocol Device {
    Ping() -> ();

    GetString() -> (struct {
        response string:MAX;
    });

    /// Replies in prepare stop.
    Stop() -> ();
};

service Service {
    device client_end:Device;
};

@transport("Banjo")
@banjo_layout("ddk-protocol")
protocol Parent {
    /// Get the test string from the parent device. This string should always
    /// read "hello world!"
    GetString() -> (struct {
        response string:MAX;
    });
};
