{
    children: [
        {
            name: "trace_manager",
            url: "fuchsia-pkg://fuchsia.com/trace_manager#meta/trace_manager.cm",
            environment: "#full-resolver-env",
        },
    ],

    // Capabilities are exposed to core so they can be then routed to
    // components under bootstrap, such as drivers.
    capabilities: [
        {
            protocol: [
                "fuchsia.tracing.controller.Controller",
                "fuchsia.tracing.provider.Registry",
            ],
        },
    ],
    use: [
        // This use makes the protocols available to v1 components.
        {
            protocol: [
                "fuchsia.tracing.controller.Controller",
                "fuchsia.tracing.provider.Registry",
            ],
            from: "#trace_manager",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.boot.ReadOnlyLog",
                "fuchsia.logger.LogSink",
                "fuchsia.tracing.kernel.Controller",
                "fuchsia.tracing.kernel.Reader",
            ],
            from: "parent",
            to: "#trace_manager",
        },
        {
            protocol: "fuchsia.tracing.provider.Registry",
            from: "#trace_manager",
            to: "#appmgr",
        },
        {
            directory: "dev",
            from: "parent",
            as: "sys",
            to: "#trace_manager",
            subdir: "sys",
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.tracing.controller.Controller",
                "fuchsia.tracing.provider.Registry",
            ],
            from: "#trace_manager",
        },
    ],
}
