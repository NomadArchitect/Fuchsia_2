    "//src/media/audio/services/mixer/fidl/*",
    "//src/media/audio/services/mixer/fidl_realtime/*",
  ]

  sources = [
    "consumer_stage.cc",
    "consumer_stage.h",
    "custom_stage.cc",
    "custom_stage.h",
    "detached_thread.cc",
    "detached_thread.h",
    "gain_control.cc",
    "gain_control.h",
    "mix_job_context.h",
    "mix_job_subtask.cc",
    "mix_job_subtask.h",
    "mix_thread.cc",
    "mix_thread.h",
    "mixer_gain_controls.cc",
    "mixer_gain_controls.h",
    "mixer_source.cc",
    "mixer_source.h",
    "mixer_stage.cc",
    "mixer_stage.h",
    "packet_queue_producer_stage.cc",
    "packet_queue_producer_stage.h",
    "packet_view.cc",
    "packet_view.h",
    "pipeline_stage.cc",
    "pipeline_stage.h",
    "producer_stage.h",
    "ptr_decls.h",
    "reusable_buffer.cc",
    "reusable_buffer.h",
    "ring_buffer_producer_stage.cc",
    "ring_buffer_producer_stage.h",
    "silence_padding_stage.cc",
    "silence_padding_stage.h",
    "simple_packet_queue_producer_stage.cc",
    "simple_packet_queue_producer_stage.h",
