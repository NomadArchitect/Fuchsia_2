deprecated_syntax;

library fidl.rust.test.external;

strict bits StrictButtons : uint32 {
    PLAY = 0b001;
    PAUSE = 0b010;
    STOP = 0b100;
};

flexible bits FlexibleButtons : uint32 {
    PLAY = 0b001;
    PAUSE = 0b010;
    STOP = 0b100;
};

strict enum StrictAnimal : int32 {
    DOG = 0;
    CAT = 1;
    FROG = 2;
};

flexible enum FlexibleAnimal : int32 {
    DOG = 0;
    CAT = 1;
    FROG = 2;
};

strict union StrictValueThing {
    1: uint32 number;
    2: string name;
};

flexible union FlexibleValueThing {
    1: uint32 number;
    2: string name;
};

strict resource union StrictResourceThing {
    1: uint32 number;
    2: string name;
};

flexible resource union FlexibleResourceThing {
    1: uint32 number;
    2: string name;
};

table ValueRecord {
    1: string name;
    2: uint8 age;
};

resource table ResourceRecord {
    1: string name;
    2: uint8 age;
};
