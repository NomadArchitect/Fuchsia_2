{
    children: [
        {
            name: "thermd",
            url: "fuchsia-pkg://fuchsia.com/thermd#meta/thermd.cm",
            startup: "eager",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.kernel.PowerResource",
                "fuchsia.logger.LogSink",
            ],
            from: "parent",
            to: [ "#thermd" ],
        },
        {
            protocol: [ "fuchsia.tracing.provider.Registry" ],
            from: "self",
            to: "#thermd",
        },
        {
            directory: "dev",
            from: "parent",
            as: "dev-thermal",
            to: "#thermd",
            subdir: "class/thermal",
        },
    ],
}
