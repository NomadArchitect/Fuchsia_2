import("//build/zircon/migrated_targets.gni")

zx_library("zbi") {
  # TODO(fxbug.dev/57244): restricted, as the library is slated to be replaced
  # by //zircon/system/lib/zbitl.
  visibility = [
    "./*",
    "//zircon/kernel/target/arm64/boot-shim:*",
  ]

  sdk = "static"
  sdk_headers = [ "lib/zbi/zbi.h" ]

  host = true
  kernel = true
  static = true
  sources = [ "zbi.c" ]
}

group("tests") {
  testonly = true
  deps = [ "test:tests" ]
}
