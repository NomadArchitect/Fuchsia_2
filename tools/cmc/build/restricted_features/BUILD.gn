# The allowlist of components that can use the "services" feature in CML.
group("services") {
  visibility = [
    "//examples/components/services:*",
    "//tools/cmc:*",
  ]
}

# The allowlist of components that can use the "on_terminate" feature in CML.
group("on_terminate") {
  visibility = [ "//tools/cmc:*" ]
}
