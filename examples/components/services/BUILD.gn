import("//build/components.gni")

group("services") {
  testonly = true
  deps = [ ":tests" ]
}

group("tests") {
  testonly = true
  deps = [ ":service-examples" ]
}

fuchsia_component("services-cmp") {
  testonly = true
  component_name = "services"
  manifest = "meta/services.cml"
}

fuchsia_test_package("service-examples") {
  test_components = [ ":services-cmp" ]
  deps = [
    "rust:branch-cmp",
    "rust:provider-a-cmp",
    "rust:provider-b-cmp",
  ]
}
