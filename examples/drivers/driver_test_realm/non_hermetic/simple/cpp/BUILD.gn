import("//build/components.gni")
import("//build/test.gni")

group("tests") {
  testonly = true
  deps = [ ":package" ]
}

test("driver_test_realm_example_simple_cpp") {
  sources = [ "test.cc" ]
  deps = [
    "//sdk/lib/driver_test_realm/simple",
    "//src/devices/lib/device-watcher/cpp",
    "//src/lib/fxl/test:gtest_main",
