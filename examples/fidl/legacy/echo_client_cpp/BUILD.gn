import("//build/components.gni")

source_set("lib") {
  sources = [
    "echo_client_app.cc",
    "echo_client_app.h",
  ]

  public_deps = [
    "//examples/fidl/legacy/services:echo",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
  ]
}

executable("bin") {
  output_name = "echo_client_cpp"

  sources = [ "echo_client.cc" ]

  deps = [
    ":lib",
    "//examples/fidl/legacy/services:echo",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//zircon/system/ulib/async-default",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}

resource("echo_client_file") {
  sources = [ "${root_build_dir}/echo_client_cpp" ]
  outputs = [ "bin/echo_client" ]
  deps = [ ":bin" ]

  # data_deps is necessary so shared libraries are in package.
  data_deps = [ ":bin" ]
}

fuchsia_package_with_single_component("echo_client_cpp") {
  manifest = "../meta/echo_client.cmx"
  deps = [ ":echo_client_file" ]
}
