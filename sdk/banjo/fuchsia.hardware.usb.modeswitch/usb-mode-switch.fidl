deprecated_syntax;

library fuchsia.hardware.usb.modeswitch;

using zx;

/// Values for `SetMode`.
enum UsbMode : uint32 {
    NONE = 0;
    HOST = 1;
    PERIPHERAL = 2;
    OTG = 3;
};

[Transport = "Banjo", BanjoLayout = "ddk-protocol"]
protocol UsbModeSwitch {
    /// Sets the current USB mode.
    SetMode(UsbMode mode) -> (zx.status s);
};
