sdk_source_set("backend_legacy_fuchsia") {
  # Keep internal for now until the API stabilizes.
  category = "internal"

  sdk_name = "syslog_cpp_backend_legacy_fuchsia"

  include_base = "//sdk"

  sources = [
    "logging_backend_fuchsia_legacy.cc",
    "logging_backend_shared.cc",
