import("//sdk/cts/build/cts.gni")

group("tests_no_e2e") {
  deps = [
    "experimental_fidl:tests",
    "hello_world:tests",
    "rust:tests",
  ]
  testonly = true
}

group("tests") {
  deps = [
    ":tests_no_e2e",
    "host_tool:tests($host_toolchain)",
  ]
  testonly = true
}

sdk_molecule("test_sdks") {
  deps = [
    "hello_world:test_sdks",
    "host_tool:test_sdks($host_toolchain)",
    "rust:test_sdks",
  ]
  testonly = true
}
