import("//build/go/toolchain.gni")
import("//build/python/python_host_test.gni")
import("//build/toolchain/basic_toolchain.gni")

# A toolchain dedicated to processing Go code.
# The only targets in this toolchain are action() targets, so it
# has no real tools.  But every toolchain needs stamp and copy.
basic_toolchain("gopher") {
  expected_label = go_toolchain
}

if (is_host) {
  python_host_test("verify_golden_go_proto_file_test") {
    main_source = "verify_golden_go_proto_file_test.py"
    sources = [ "verify_golden_go_proto_file.py" ]
  }
}

# Used to restrict the set of `go_build` targets that can set `gopackages`.
# TODO(fxbug.dev/58755): Stop supporting `gopackages` in favor of `library`.
group("allow_gopackages") {
  # WARNING: Do add new items to this list. You are encouraged to prune the list.
  visibility = [
    "//src/sys/pkg/bin/pm:*",
    "//src/sys/pkg/tests/system-tests:*",
    "//src/testing/host-target-testing:*",
    "//src/tests/benchmarks/fidl/benchmark_suite/gen:*",
    "//src/tests/fidl/source_compatibility/*",
    "//third_party/cobalt/src/bin/config_change_validator/src:*",
    "//third_party/cobalt/src/bin/config_parser/src:*",
    "//third_party/cobalt/src/bin/error_calculator/src:*",
    "//third_party/go:*",
    "//third_party/go/makefuchsia:*",
    "//third_party/go/makeroot:*",
    "//third_party/golibs/*",
    "//tools/bootserver_old/tests:*",
    "//tools/fidl/fidlgen_cpp:*",
    "//tools/fidl/fidlgen_dart:*",
    "//tools/fidl/fidlgen_go:*",
    "//tools/fidl/fidlgen_hlcpp:*",
    "//tools/fidl/fidlgen_libfuzzer:*",
    "//tools/fidl/fidlgen_rust:*",
    "//tools/fidl/fidlgen_syzkaller:*",
    "//tools/fidl/gidl:*",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":verify_golden_go_proto_file_test($host_toolchain)" ]
}
