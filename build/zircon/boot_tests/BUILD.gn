# This provides metadata in the //:images and //:boot_tests schemas
# transliterated from the Zircon data for //zircon/:boot_tests and the
# subset of //zircon/:images it refers to.
group("boot_tests") {
  visibility = [
    "//:boot_tests",
    "//:default",
    "//:images",
    "//:tests",
  ]
  testonly = true

  deps = [
    "//src/bringup/lib/mexec/tests",
    "//zircon/kernel/lib/userabi/userboot/tests",
    "//zircon/kernel/phys:tests",
    "//zircon/system/utest/core:boot_tests",
  ]
}
